{
	"name": "spotify-clone",
	"version": "1.0.0",
	"description": "Spotify but better.",
	"main": "index.js",
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"type-check": "tsc --pretty --noEmit",
		"format": "prettier --write .",
		"lint": "eslint . --ext ts --ext tsx --ext js",
		"test": "jest",
		"test-all": "yarn lint && yarn type-check && yarn test"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sibasishm/spotify-clone.git"
	},
	"author": "Siabsish Mohanty",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/sibasishm/spotify-clone/issues"
	},
	"homepage": "https://github.com/sibasishm/spotify-clone#readme",
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"pre-push": "yarn run type-check"
		}
	},
	"lint-staged": {
		"*.@(ts|tsx)": [
			"yarn lint",
			"yarn format"
		]
	},
	"dependencies": {
		"next": "^10.0.9",
		"react": "^17.0.1",
		"react-dom": "^17.0.1"
	},
	"devDependencies": {
		"@testing-library/react": "^11.2.5",
		"@types/react": "^17.0.3",
		"babel-jest": "^26.6.3",
		"eslint": "^7.22.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-react": "^7.22.0",
		"husky": "^5.1.3",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^26.6.3",
		"jest-watch-typeahead": "^0.6.1",
		"lint-staged": "^10.5.4",
		"prettier": "^2.2.1",
		"typescript": "^4.2.3"
	}
}
